<html>
<body>
<script>
function add()
{
 var num1,num2,sum;
 num1=parseInt(document.getElementById("txtFirstNumber").value);
 num2=parseInt(document.getElementById("txtSecondNumber").value);
 sum=num1+num2;
document.getElementById("txtAnswer").value=sum;
}
function sub()
{
 var num1,num2,sub;
 num1=parseInt(document.getElementById("txtFirstNumber").value);
 num2=parseInt(document.getElementById("txtSecondNumber").value);
 sub=num1-num2;
document.getElementById("txtAnswer1").value=sub;
}
function mul()
{
 var num1,num2,sum;
 num1=parseInt(document.getElementById("txtFirstNumber").value);
 num2=parseInt(document.getElementById("txtSecondNumber").value);
 mul=num1*num2;
document.getElementById("txtAnswer2").value=mul;
}
function div()
{
 var num1,num2,div;
 num1=parseInt(document.getElementById("txtFirstNumber").value);
 num2=parseInt(document.getElementById("txtSecondNumber").value);
 div=num1/num2;
document.getElementById("txtAnswer3").value=div;
}
</script>
</head>
<body>
<p>First Number: <input id="txtFirstNumber"></p>
<p>Second Number: <input id="txtSecondNumber"></p>
<button onclick="add()">Add Then</button>
<button onclick="sub()">Sub Then</button>
<button onclick="mul()">Mul Then</button>
<button onclick="div()">Div Then</button>
<p>Result=<input id="txtAnswer"></p>
</body>
</html>